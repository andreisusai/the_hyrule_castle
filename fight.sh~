#!/bin/bash

source "basic_characteristics.sh"

fight(){    

    display_character
    # Character's statistics values
    
    echo $nameCharacter
    echo $hp
    echo $mp
    echo $str
    echo $int
    echo $def
    echo $res
    echo $spd
    echo $luck
    echo $race
    echo $strenghtR
    echo $weaknessR
    echo $rarityR
    echo $class
    echo $strengthC
    echo $weaknessC
    echo $attack_typeC
    echo $alignmentC
    echo $rarityC
    echo $rarity

    get_enemy
    # Character's statistics values
    
    echo $nameEnemy
    echo $hpE
    echo $mpE
    echo $strE
    echo $intE
    echo $defE
    echo $resE
    echo $spdE
    echo $luckE
    echo $raceE
    echo $strenghtER
    echo $weaknessER
    echo $rarityER
    echo $classE
    echo $strengthEC
    echo $weaknessEC
    echo $attack_typeEC
    echo $alignmentEC
    echo $rarityEC
    echo $rarityE
}

fight
